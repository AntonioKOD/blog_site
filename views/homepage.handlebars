<div>
{{#each posts as |post|}}

<div class="border-4 border-blue-400 mt-8 relative rounded-lg mx-12">
    <div class="bg-blue-300 flex space-x-6">
    <h1 class="bg-blue-300 text-xl mx-4">{{post.title}}</h1>
    <p class="px-36 text-sm">Posted by {{post.user.name}} on {{format_date post.created_at}}</p>
    </div>
    <div class="mt-4 mx-4 text-center mb-4 text-lg">{{post.text_post}}</div>
    <div class="flex">
        <a class="border-4 border-blue-400 rounded-lg m-2 mx-auto" href="/post/{{post.id}}">Add a Comment</a>
    </div>
</div>


{{/each}}
</div>